pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
	stage('build') {
            steps {
                saveAndPrintDate("result.txt")
            }
        }
	stage('test') {
            steps {
		sh 'grep 2019 result.txt'
            }
        }
    }
}

def saveAndPrintDate(filename = '') {
    sh "date > $filename && cat $filename"
}
