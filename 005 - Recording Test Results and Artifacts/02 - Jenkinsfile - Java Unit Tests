pipeline {
    agent { 
		docker { 
			image 'maven:3.3.3' 
		}
	}
    stages {
        stage('tests') {
		steps {
			configFileProvider(
				[configFile(fileId: 'settings.xml',
					target_location: 'settings.xml')]) {
				sh 'mvn -s settings.xml -f "005 - Recording Test Results and Artifacts/02 - Java Unit Tests" clean install'
			}
		}
        }
    }
}
